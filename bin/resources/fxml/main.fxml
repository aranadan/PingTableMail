                <TableColumn fx:id="hostName" prefWidth="200.0" text="Name"/>
                <TableColumn fx:id="ip" minWidth="0.0" prefWidth="86.0" text="IP"/>
                <TableColumn fx:id="response" prefWidth="201.0" text="Response"/>
                <TableColumn fx:id="status" prefWidth="70.0" text="TTL"/>
                <TableColumn fx:id="time" prefWidth="128.0" text="Time"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem id="btnAdd" mnemonicParsing="false" onAction="#actionButtonPressed" text="add">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="A" control="DOWN" meta="UP" shift="UP"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                        <MenuItem id="btnEdit" mnemonicParsing="false" onAction="#actionButtonPressed" text="edit">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="E" control="DOWN" meta="UP" shift="UP"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#delete" text="delete">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="D" control="DOWN" meta="UP" shift="UP"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableView>
        <TextField fx:id="mailTo" layoutY="472.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="24.0"
